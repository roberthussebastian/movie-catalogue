<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.robertsiagian.moviecatalogue">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:parentActivityName=".HomeActivity"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalogue"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.detail.movies.DetailMoviesActivity"
            android:label="@string/title_activity_detail_movies"
            android:theme="@style/Theme.MovieCatalogue.NoActionBar">

        </activity>
        <activity
            android:name=".ui.detail.tvshow.DetailTvShowActivity"
            android:label="@string/title_activity_detail_tvshow"
            android:theme="@style/Theme.MovieCatalogue.NoActionBar">

        </activity>
        <activity android:name=".ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>